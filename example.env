# Input/Output Configuration
CONFIG_FILE=conversion_config.yaml
INPUT_FILE=dummy_CSV_data.csv
OUTPUT_DIR=output
BATCH_SIZE=1000

# Logging Configuration
LOG_LEVEL=DEBUG
CONVERSION_LOG=conversion.log
DEBUG_LOG=debug.log

# Processing Configuration
VALIDATE_INPUT=true
SKIP_INVALID_ROWS=false
RECORDS_PER_CHUNK=2
MAX_CHUNK_SIZE_MB=100
ENTITY_SAVE_FREQUENCY=1000
INCREMENTAL_SAVE=true

# File Settings
JSON_INDENT=2
ENSURE_ASCII=false
FILE_ENCODING=utf-8-sig

# Entity Output Files
TRANSACTION_FILE=fy2024_contract_transactions.json
ENTITIES_DIR=output

# Date Format Settings
DATE_FORMAT=%Y-%m-%d
DATETIME_FORMAT=%Y-%m-%d

# Error Handling
MAX_RETRIES=3
LOG_ERRORS=true
LOG_FREQUENCY=1000

# Chunking Configuration
CREATE_INDEX=true

# Resource Configuration
MEMORY_LIMIT_MB=4096  # Optional memory limit for the process
THREAD_COUNT=4        # Optional thread count for parallel processing